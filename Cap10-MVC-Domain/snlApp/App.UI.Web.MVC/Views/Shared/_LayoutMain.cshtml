@using App.UI.Web.MVC.Helpers;

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Free Bootstrap Admin Template : Binary Admin</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="~/Content/theme/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/Content/theme/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/Content/theme/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">Binary admin</a>
            </div>
            <div style="color: white;
padding: 15px 50px 5px 50px;
float: right;
font-size: 16px;">@SecurityHelpers.GetUserFullName() &nbsp;<a href="@Url.Action("SignOut","Security")" class="btn btn-danger square-btn-adjust">Salir</a></div>
        </nav>
        <!-- /. NAV TOP  -->|
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li class="text-center">
                        <img src="~/Content/theme/img/find_user.png" class="user-image img-responsive" />
                    </li>

                    @if (SecurityHelpers.IsAdmin())
                    {
                        <li>
                            <a href="@Url.Action("Buscar", "Artist")"><i class="fa fa-dashboard fa-3x"></i> Artistas</a>
                        </li>
                    }
                    
                    @if (SecurityHelpers.IsAdmin() || SecurityHelpers.IsSupervisor())
                    {
                        <li>
                            <a href="@Url.Action("Buscar", "Track")"><i class="fa fa-desktop fa-3x"></i> Tracks</a>
                        </li>
                    }

                    @if (SecurityHelpers.IsAdmin() || SecurityHelpers.IsSupervisor() || SecurityHelpers.IsOperator())
                    {
                        <li>
                            <a href="@Url.Action("Index", "Customer")"><i class="fa fa-desktop fa-3x"></i> Clientes</a>
                        </li>
                    }

                    </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-9">
                        <h2>@ViewBag.Title</h2>
                        <h5></h5>

                    </div>

                    <div id="imgLoader" style="display:none;" class="col-md-3">
                        <img src="~/Content/theme/img/loading.gif" />
                    </div>


                </div>
                <!-- /. ROW  -->
                <hr />
                @RenderBody()
            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="~/Content/theme/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="~/Content/theme/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="~/Content/theme/js/jquery.metisMenu.js"></script>

    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <!-- CUSTOM SCRIPTS -->
    <script src="~/Content/theme/js/custom.js"></script>




</body>
</html>