@model App.Entities.Base.Artist

@{
    ViewBag.Title = "Editar Artista";
}

@using (Html.BeginForm("Save","Artist"))
{
       
    <div class="form-horizontal">
        <input type="hidden" name="ArtistId" value="@Model.ArtistId" />

        <div class="form-group">
            <label for="Name" class = "control-label col-md-2">Artista</label>
            <div class="col-md-3">
                <input id="Name" name="Name" value="@Model.Name" class = "form-control"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

